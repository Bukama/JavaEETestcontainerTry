    <!-- Postgres config-example-db definition -->
    <dataSource id="ReadingDS" jndiName="jdbc/testcontainer/readingDS" jdbcDriverRef="oracle-driver"
                type="javax.sql.XADataSource" transactional="true">
        <connectionManager maxPoolSize="20" minPoolSize="5"
                           connectionTimeout="10s" agedTimeout="30m"/>

        <jdbcDriver libraryRef="OracleLib"/>
        <properties.oracle URL="jdbc:oracle:thin:@localhost:1521:container" user="c##readinguser" password="oracle"/>

    </dataSource>

    <library id="OracleLib">
        <fileset dir="${shared.resource.dir}/oracle" includes="*.jar"/>
    </library>

